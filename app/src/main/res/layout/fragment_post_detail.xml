<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toTopOf="@id/bottom_separator_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.example.myapplication.common_components.SimpleTitleBar
                    android:id="@+id/title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/profile_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="18.7dp"
                    app:layout_constraintTop_toBottomOf="@id/title_bar"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    android:src="@drawable/profile_placeholder"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".11"
                    />

                <TextView
                    android:id="@+id/profile_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_title"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_heading"
                    android:textColor="@color/title_bar_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/profile_iv"
                    app:layout_constraintTop_toTopOf="@id/profile_iv"/>

                <ImageView
                    android:id="@+id/expert_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/profile_iv"
                    app:layout_constraintStart_toEndOf="@id/profile_title_tv"
                    android:src="@drawable/expert_icon"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:layout_marginStart="4dp"
                    />

                <TextView
                    android:id="@+id/expert_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_text2"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/expert_iv"
                    app:layout_constraintTop_toTopOf="@id/profile_iv"/>

                <TextView
                    android:id="@+id/status_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_title"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintTop_toTopOf="@id/profile_iv"
                    app:layout_constraintBottom_toBottomOf="@id/profile_iv"
                    android:background="@drawable/green_btn_bg"
                    />

                <TextView
                    android:id="@+id/user_height_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height_value"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toStartOf="@id/profile_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/profile_title_tv"/>

                <TextView
                    android:id="@+id/user_weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_value"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/user_height_tv"
                    app:layout_constraintTop_toTopOf="@id/user_height_tv"/>

                <TextView
                    android:id="@+id/message_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_title"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_heading"
                    android:textColor="@color/title_bar_text_color"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/profile_iv"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintHorizontal_bias="0"
                    android:lines="1"
                    app:layout_constraintTop_toBottomOf="@id/profile_iv"/>

                <TextView
                    android:id="@+id/message_details_tv"
                    android:layout_width="0dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:text="@string/message_detail"
                    android:textSize="12sp"
                    android:fontFamily="@font/font_normal_text"
                    android:textColor="@color/normal_comment_text_color"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/message_title_tv"
                    android:lineSpacingExtra="4sp"
                    android:letterSpacing=".01"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tags_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/message_details_tv"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_view_pager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tags_rv"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/post_image_tab_layout"
                    app:layout_constraintStart_toStartOf="@id/image_view_pager"
                    app:layout_constraintEnd_toEndOf="@id/image_view_pager"
                    app:layout_constraintBottom_toBottomOf="@id/image_view_pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    app:tabBackground="@drawable/tab_selector"
                    android:background="@null"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"/>

                <ImageView
                    android:id="@+id/like_iv"
                    app:layout_constraintTop_toBottomOf="@id/image_view_pager"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="19.33dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/heart_icon"/>

                <TextView
                    android:id="@+id/like_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/font_normal_text"
                    android:text="5"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/like_iv"
                    app:layout_constraintStart_toEndOf="@id/like_iv"
                    app:layout_constraintTop_toTopOf="@id/like_iv" />

                <ImageView
                    android:id="@+id/comment_iv"
                    app:layout_constraintTop_toTopOf="@id/like_iv"
                    app:layout_constraintStart_toEndOf="@id/like_count_tv"
                    android:layout_marginStart="14dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/chat_icon"/>

                <TextView
                    android:id="@+id/comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="12sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/like_iv"
                    app:layout_constraintBottom_toBottomOf="@id/like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_iv"/>

                <ImageView
                    android:id="@+id/bookmark_iv"
                    app:layout_constraintTop_toTopOf="@id/like_iv"
                    app:layout_constraintBottom_toBottomOf="@id/like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_count_tv"
                    android:layout_marginStart="14dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/icon3"/>

                <View
                    android:id="@+id/separator_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="19.33dp"
                    app:layout_constraintTop_toBottomOf="@id/like_iv"
                    android:background="@color/off_white_color"/>


                <ImageView
                    android:id="@+id/comment_profile_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/separator_view"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    android:src="@drawable/profile_placeholder"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".11"
                    android:layout_marginTop="14.7dp"
                    />

                <TextView
                    android:id="@+id/comment_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment_user_name_title"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_heading"
                    android:textColor="@color/title_bar_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/comment_profile_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_profile_iv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_profile_iv"/>

                <ImageView
                    android:id="@+id/comment_expert_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/comment_user_name_tv"
                    app:layout_constraintStart_toEndOf="@id/comment_user_name_tv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_user_name_tv"
                    android:src="@drawable/expert_icon"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:layout_marginStart="4dp"
                    />

                <TextView
                    android:id="@+id/comment_expert_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_text_title1"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/comment_expert_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_user_name_tv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_user_name_tv"/>

                <ImageView
                    android:id="@+id/comment_menu_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/comment_profile_iv"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    android:src="@drawable/three_dots_image_icon"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".04"
                    android:layout_marginStart="4dp"
                    />

                <TextView
                    android:id="@+id/comment_message_details_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="@string/message_detail"
                    android:textSize="12sp"
                    android:fontFamily="@font/font_normal_text"
                    android:textColor="@color/normal_comment_text_color"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="@id/comment_user_name_tv"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/comment_user_name_tv"
                    android:lineSpacingExtra="4sp"
                    android:letterSpacing=".01"/>

                <ImageView
                    android:id="@+id/comment_like_iv"
                    app:layout_constraintTop_toBottomOf="@id/comment_message_details_tv"
                    app:layout_constraintStart_toStartOf="@id/comment_message_details_tv"
                    android:layout_marginTop="19.33dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/heart_icon"/>

                <TextView
                    android:id="@+id/comment_like_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/font_normal_text"
                    android:text="5"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/comment_like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_like_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_like_iv" />

                <ImageView
                    android:id="@+id/comment_chat_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_like_count_tv"
                    android:layout_marginStart="14dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/chat_icon"/>

                <TextView
                    android:id="@+id/comment_chat_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="12sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/comment_like_iv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_chat_iv"/>

                <ImageView
                    android:id="@+id/comment_reply_profile_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/comment_like_iv"
                    app:layout_constraintStart_toStartOf="@id/comment_message_details_tv"
                    android:src="@drawable/profile_placeholder"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".11"
                    android:layout_marginTop="14.7dp"
                    />

                <TextView
                    android:id="@+id/comment_reply_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment_reply_user_name"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_heading"
                    android:textColor="@color/title_bar_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/comment_reply_profile_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_reply_profile_iv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_reply_profile_iv"/>

                <TextView
                    android:id="@+id/comment_reply_expert_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exper_text"
                    android:fontFamily="@font/font_normal_text"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey_text_color"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/comment_reply_user_name_tv"
                    app:layout_constraintTop_toTopOf="@id/comment_reply_user_name_tv"
                    app:layout_constraintBottom_toBottomOf="@id/comment_reply_user_name_tv"/>

                <TextView
                    android:id="@+id/reply_message_details_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/message_detail"
                    android:textSize="12sp"
                    android:fontFamily="@font/font_normal_text"
                    android:textColor="@color/normal_comment_text_color"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="@id/comment_reply_user_name_tv"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/comment_reply_user_name_tv"
                    android:lineSpacingExtra="4sp"
                    android:letterSpacing=".01"/>

                <ImageView
                    android:id="@+id/comment_reply_like_iv"
                    app:layout_constraintTop_toBottomOf="@id/reply_message_details_tv"
                    app:layout_constraintStart_toStartOf="@id/reply_message_details_tv"
                    android:layout_marginTop="19.33dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent=".05"
                    android:src="@drawable/heart_icon"/>

                <TextView
                    android:id="@+id/comment_reply_like_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/font_normal_text"
                    android:text="5"
                    android:textColor="@color/light_grey_text_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/comment_reply_like_iv"
                    app:layout_constraintStart_toEndOf="@id/comment_reply_like_iv"
                    app:layout_constraintTop_toTopOf="@id/comment_reply_like_iv" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="16dp"
                    android:orientation="vertical"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_end="16dp"
                    android:orientation="vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/bottom_separator_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@id/add_attachment_iv"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/off_white_color"/>

        <ImageView
            android:id="@+id/add_attachment_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent=".07"
            android:src="@drawable/attachment_icon"
            android:layout_marginBottom="12dp"
            />

        <EditText
            android:id="@+id/input_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/reply_text_color"
            android:hint="@string/reply_field_hint"
            android:text=""
            android:textSize="12sp"
            android:fontFamily="@font/font_small_text"
            android:background="@android:color/transparent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/add_attachment_iv"
            app:layout_constraintBottom_toBottomOf="@id/add_attachment_iv"
            app:layout_constraintEnd_toStartOf="@id/reply_enter_tv"
            />


        <TextView
            android:id="@+id/reply_enter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:fontFamily="@font/font_normal_text"
            android:textSize="12sp"
            android:textColor="@color/light_grey_text_color"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/add_attachment_iv"
            app:layout_constraintBottom_toBottomOf="@id/add_attachment_iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>